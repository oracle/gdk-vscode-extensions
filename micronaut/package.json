{
	"name": "micronaut",
	"displayName": "MicronautÂ® Launch",
	"description": "A lightweight extension to create Micronaut projects.",
	"version": "0.6.1",
	"preview": true,
	"license": "UPL-1.0",
	"publisher": "oracle-labs-graalvm",
	"author": {
		"name": "Oracle Labs"
	},
	"icon": "images/micronaut.png",
	"galleryBanner": {
		"color": "#000000",
		"theme": "dark"
	},
    "homepage": "https://github.com/oracle/gcn-vscode-extensions/blob/main/micronaut/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/oracle/gcn-vscode-extensions"
    },
    "bugs": {
        "url": "https://github.com/oracle/gcn-vscode-extensions/issues"
    },
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"graalvm",
		"micronaut",
    	"native image",
		"microservices",
    "java"
	],
	"activationEvents": [
		"workspaceContains:**/micronaut-cli.yml"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Micronaut Launch",
			"properties": {
				"micronaut.home": {
					"type": "string",
					"default": "",
					"description": "Optional path to Micronaut CLI installation",
					"scope": "machine"
				},
				"micronaut.launchUrl": {
					"type": "string",
					"default": "",
					"description": "Optional Micronaut Launch URL (e.g. 'https://launch.micronaut.io')"
				}
			}
		},
		"commands": [
			{
				"command": "extension.micronaut.createProject",
				"title": "Create Micronaut Project",
				"category": "Micronaut Launch"
			}
		],
		"menus": {
			"commandPalette": [
			]
		}
	},
	"vsce": {
	  "baseImagesUrl": "https://github.com/oracle/gcn-vscode-extensions/raw/release/v4.0.3.1/micronaut"
	},
	"config": {
		"winBuildPath": "..\\node_modules\\.bin\\vsce",
		"unixBuildPath": "../node_modules/.bin/vsce",
		"buildCmd": "package --allow-star-activation --no-update-package-json"
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode development",
		"info": "webpack --display-modules",
		"watch": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"prebuild": "npm install",
		"build": "cross-os build",
		"lint": "eslint src --ext ts"
	},
	"cross-os": {
		"build": {
			"linux": "$npm_package_config_unixBuildPath $npm_package_config_buildCmd `[ -z ${BUILD_NUMBER} ] && echo \"${npm_package_version}\" || echo \"${npm_package_version}-${BUILD_NUMBER}\"`",
			"darwin": "$npm_package_config_unixBuildPath $npm_package_config_buildCmd `[ -z ${BUILD_NUMBER} ] && echo \"${npm_package_version}\" || echo \"${npm_package_version}-${BUILD_NUMBER}\"`",
			"win32": "%npm_package_config_winBuildPath% %npm_package_config_buildCmd%"
		}
	},
	"dependencies": {
		"decompress": "^4.2.1",
		"jdk-utils": "^0.4.4"
	},
	"devDependencies": {
		"@types/decompress": "^4.2.4",
		"@types/glob": "^7.1.1",
		"@types/node": "^14.16.0",
		"@types/vscode": "^1.76.0",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1",
		"ajv": "^8.12.0",
		"cross-os": "^1.5.0",
		"eslint": "^8.35.0",
		"eslint-webpack-plugin": "^4.0.0",
		"glob": "^7.1.4",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.5",
		"webpack": "^5.76.0",
		"webpack-cli": "^5.0.1"
	}
}
